<% if @note %>http://ruby-log.blogspot.com/2013/02/sinatra-layouts.html
 <p>Are you sure you want to delete the following note: <em>"<%= @note %>"</em>?</p>
 <form action="/<%= @note.id %>" method="post">
 <input type="hidden" name="_method" value="delete">
 <input type="submit" value="Yes, Delete It!">
 <a href="/<%= @note.id %>">Cancel</a>
 </form>
<% else %>
 <p>Note not found.</p>
<% end %>

